{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Webscreenshots Merged Config",
  "type": "object",
  "required": [
    "url",
    "outputDir",
    "outputPattern",
    "routes",
    "browserOptions",
    "captureOptions",
    "viewports",
    "crawl",
    "retryOptions"
  ],
  "properties": {
    "url": { "type": "string", "format": "uri", "minLength": 1 },
    "outputDir": { "type": "string", "minLength": 1 },
    "outputPattern": { "type": "string", "minLength": 1 },
    "routes": {
      "type": "array",
      "items": { "type": "string" },
      "minItems": 1
    },
    "browserOptions": {
      "type": "object",
      "required": ["headless"],
      "properties": {
        "headless": { "type": "boolean" },
        "args": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "captureOptions": {
      "type": "object",
      "required": ["fullPage", "imageType"],
      "properties": {
        "fullPage": { "type": "boolean" },
        "imageType": { "type": "string", "enum": ["png", "jpeg", "webp"] },
        "quality": { "type": "integer", "minimum": 0, "maximum": 100 }
      },
      "additionalProperties": false
    },
    "viewports": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "width", "height"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "width": { "type": "integer" },
          "height": { "type": "integer" },
          "deviceScaleFactor": { "type": "number" }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "crawl": { "type": "boolean" },
    "crawlOptions": {
      "type": "object",
      "properties": {
        "crawlLimit": { "type": "integer", "minimum": 1 },
        "excludeRoutes": {
          "type": "array",
          "items": { "type": "string" }
        },
        "dynamicRoutesLimit": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": false
    },
    "retryOptions": {
      "type": "object",
      "required": ["maxAttempts"],
      "properties": {
        "maxAttempts": { "type": "integer", "minimum": 1 },
        "delayMs": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "authOptions": {
      "type": "object",
      "required": ["method"],
      "properties": {
        "method": { "type": "string", "enum": ["basic", "cookie", "form", "token"] },
        "basic": {
          "type": "object",
          "properties": {
            "username": { "type": "string" },
            "password": { "type": "string" }
          },
          "required": ["username", "password"],
          "additionalProperties": false
        },
        "cookiesPath": { "type": "string" },
        "form": {
          "type": "object",
          "properties": {
            "loginUrl": { "type": "string", "format": "uri" },
            "inputs": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "submit": { "type": "string" },
            "errorSelector": { "type": "string" },
            "successSelector": { "type": "string" },
            "timeoutMs": { "type": "integer", "minimum": 0 }
          },
          "required": ["loginUrl", "inputs", "submit"],
          "additionalProperties": false
        },
        "token": {
          "type": "object",
          "properties": {
            "header": { "type": "string" },
            "value": { "type": "string" }
          },
          "required": ["header", "value"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false,
      "allOf": [
        { "if": { "properties": { "method": { "const": "basic" } } }, "then": { "required": ["basic"] } },
        { "if": { "properties": { "method": { "const": "cookie" } } }, "then": { "required": ["cookiesPath"] } },
        { "if": { "properties": { "method": { "const": "form" } } }, "then": { "required": ["form"] } },
        { "if": { "properties": { "method": { "const": "token" } } }, "then": { "required": ["token"] } }
      ]
    }
  },
  "additionalProperties": false
}
