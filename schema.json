{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Webscreenshots Config",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to the JSON schema"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "The website URL to capture (e.g., https://example.com)."
    },
    "outputDir": {
      "type": "string",
      "description": "Directory where screenshots will be saved (e.g., ./screenshots)."
    }
  },
  "required": ["url"],
  "additionalProperties": false
}
