{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Webscreenshots Config",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to the JSON schema"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "Website URL to capture"
    },
    "outputDir": {
      "type": "string",
      "description": "Folder to save screenshots"
    },
    "outputPattern": {
      "type": "string",
      "description": "Pattern for generated file names (default: {host}/{viewport}/{host}-{viewport}-{route}.{ext})"
    },
    "routes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "browserOptions": {
      "type": "object",
      "properties": {
        "headless": {
          "type": "boolean",
          "default": true,
          "description": "Run browser in headless mode"
        },
        "args": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Additional arguments to pass to Puppeteer (e.g. --no-sandbox)"
        }
      },
      "additionalProperties": false
    },
    "captureOptions": {
      "type": "object",
      "properties": {
        "fullPage": {
          "type": "boolean",
          "description": "Capture the full scrollable page"
        },
        "imageType": {
          "type": "string",
          "enum": ["png", "jpeg", "webp"],
          "description": "Image format"
        },
        "quality": {
          "type": "integer",
          "minimum": 0,
          "maximum": 100,
          "description": "Image quality (only for jpeg/webp)"
        }
      },
      "additionalProperties": false
    },
    "viewports": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "width", "height"],
        "properties": {
          "name": { "type": "string" },
          "width": { "type": "integer" },
          "height": { "type": "integer" },
          "deviceScaleFactor": { "type": "number" }
        },
        "additionalProperties": false
      }
    },
    "crawl": {
      "type": "boolean",
      "description": "Enable crawling to discover internal routes"
    },
    "crawlOptions": {
      "type": "object",
      "description": "Options for crawling",
      "properties": {
        "crawlLimit": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum number of pages to crawl"
        },
        "excludeRoutes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of route prefixes to exclude during crawling"
        },
        "dynamicRoutesLimit": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum number of dynamic routes to include per group"
        }
      },
      "additionalProperties": false
    },
    "retryOptions": {
      "type": "object",
      "description": "Retry configuration for capture attempts",
      "properties": {
        "maxAttempts": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum number of retry attempts"
        },
        "delayMs": {
          "type": "integer",
          "minimum": 0,
          "description": "Delay in milliseconds between retry attempts"
        }
      },
      "additionalProperties": false
    },
    "authOptions": {
      "type": "object",
      "description": "Authentication options",
      "properties": {
        "method": {
          "type": "string",
          "enum": ["basic", "cookie", "form", "token"],
          "description": "Authentication method"
        },
        "basic": {
          "type": "object",
          "properties": {
            "username": { "type": "string" },
            "password": { "type": "string" }
          },
          "required": ["username", "password"],
          "additionalProperties": false
        },
        "cookiesPath": {
          "type": "string",
          "description": "Path to JSON file containing cookies"
        },
        "form": {
          "type": "object",
          "properties": {
            "loginUrl": { "type": "string", "format": "uri" },
            "inputs": {
              "type": "object",
              "additionalProperties": { "type": "string" }
            },
            "submit": { "type": "string" },
            "errorSelector": { "type": "string" },
            "successSelector": { "type": "string" },
            "timeoutMs": { "type": "integer", "minimum": 0 }
          },
          "required": ["loginUrl", "inputs", "submit", "timeoutMs"],
          "additionalProperties": false
        },
        "token": {
          "type": "object",
          "properties": {
            "header": { "type": "string" },
            "value": { "type": "string" }
          },
          "required": ["header", "value"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
