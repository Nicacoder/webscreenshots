########################################
# Webscreenshots Environment Variables
#
# USAGE:
# 1. Copy this file to `.env`
# 2. Uncomment and adjust values as needed
# 3. Keep `.env` out of version control (it's in .gitignore by default)
########################################

## -------------------------------------
## Top-level options
## -------------------------------------

# Website URL to capture
# WEBSCREENSHOTS__URL=https://example.com

# Output directory for screenshots
# WEBSCREENSHOTS__OUTPUTDIR=custom-screenshots

# File naming pattern (placeholders: {host}, {route}, {viewport}, {ext})
# WEBSCREENSHOTS__OUTPUTPATTERN={host}/{route}/{viewport}.{ext}

# Comma-separated list of routes to capture
# WEBSCREENSHOTS__ROUTES=/home,/about


## -------------------------------------
## Browser options
## -------------------------------------

# Run browser in headless mode (true/false)
# WEBSCREENSHOTS__BROWSEROPTIONS__HEADLESS=true

# Extra launch arguments (comma-separated)
# WEBSCREENSHOTS__BROWSEROPTIONS__ARGS=--no-sandbox,--disable-gpu


## -------------------------------------
## Capture options
## -------------------------------------

# Capture full page (true/false)
# WEBSCREENSHOTS__CAPTUREOPTIONS__FULLPAGE=true

# Image format (png/jpeg/webp)
# WEBSCREENSHOTS__CAPTUREOPTIONS__IMAGETYPE=jpeg

# JPEG/WebP quality (0â€“100)
# WEBSCREENSHOTS__CAPTUREOPTIONS__QUALITY=80


## -------------------------------------
## Viewports
## -------------------------------------

# List of viewports as JSON array
# Example: [{"name":"mobile","width":375,"height":667,"deviceScaleFactor":2},{"name":"desktop","width":1920,"height":1080}]
# WEBSCREENSHOTS__VIEWPORTS=[{"name":"mobile","width":375,"height":667,"deviceScaleFactor":2},{"name":"desktop","width":1920,"height":1080}]


## -------------------------------------
## Crawl options
## -------------------------------------

# Enable crawling (true/false)
# WEBSCREENSHOTS__CRAWL=true

# Max pages to crawl
# WEBSCREENSHOTS__CRAWLOPTIONS__CRAWLLIMIT=10

# Comma-separated list of routes to exclude from crawling
# WEBSCREENSHOTS__CRAWLOPTIONS__EXCLUDEROUTES=/private,/login

# Max dynamic routes per group
# WEBSCREENSHOTS__CRAWLOPTIONS__DYNAMICROUTESLIMIT=5


## -------------------------------------
## Retry options
## -------------------------------------

# Max retry attempts
# WEBSCREENSHOTS__RETRYOPTIONS__MAXATTEMPTS=4

# Delay between retries in milliseconds
# WEBSCREENSHOTS__RETRYOPTIONS__DELAYMS=1000


## -------------------------------------
## Authentication options
## -------------------------------------

# Authentication method: 'basic', 'cookie', 'form', or 'token'
# WEBSCREENSHOTS__AUTHOPTIONS__METHOD=basic

### Basic Auth
# Username for basic HTTP authentication
# WEBSCREENSHOTS__AUTHOPTIONS__BASIC__USERNAME=admin

# Password for basic HTTP authentication
# WEBSCREENSHOTS__AUTHOPTIONS__BASIC__PASSWORD=P4$$w0rd

### Cookie Auth
# Path to JSON file containing array of cookies
# Example cookies file content: [{"name":"AuthCookie","value":"token","domain":"localhost","path":"/","expires":-1,"httpOnly":false,"secure":false,"sourceScheme":"NonSecure"}]
# WEBSCREENSHOTS__AUTHOPTIONS__COOKIESPATH=./cookies.json

### Form-based Auth
# Login page URL
# WEBSCREENSHOTS__AUTHOPTIONS__FORM__LOGINURL=https://example.com/login

# Input selectors and values as JSON object
# Example: {"input[name=email]":"user@example.com","input[name=password]":"P4$$"}
# WEBSCREENSHOTS__AUTHOPTIONS__FORM__INPUTS={"input[name=email]":"user@example.com","input[name=password]":"P4$$"}

# Submit button selector
# WEBSCREENSHOTS__AUTHOPTIONS__FORM__SUBMIT=button[type=submit]

# CSS selector for error messages on login failure
# WEBSCREENSHOTS__AUTHOPTIONS__FORM__ERRORSELECTOR=.error

# CSS selector indicating successful login
# WEBSCREENSHOTS__AUTHOPTIONS__FORM__SUCCESSSELECTOR=.dashboard

# Timeout for login form submission (milliseconds)
# WEBSCREENSHOTS__AUTHOPTIONS__FORM__TIMEOUT_MS=5000

### Token-based Auth
# Header name to set token in (e.g. Authorization)
# WEBSCREENSHOTS__AUTHOPTIONS__TOKEN__HEADER=Authorization

# Token value to use in the header
# WEBSCREENSHOTS__AUTHOPTIONS__TOKEN__VALUE=Bearer abc123